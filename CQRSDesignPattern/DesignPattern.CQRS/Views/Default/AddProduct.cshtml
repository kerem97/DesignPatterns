@model DesignPattern.CQRS.CQRSPattern.Commands.CreateProductCommand

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">

<h3>Yeni Ürün Ekle</h3>
<br />

<form method="post">
    <label>Ürün Adı</label>
    <input type="text"  class="form-control" asp-for="Name"/>
    <br />
      <label>Stok</label>
    <input type="text"  class="form-control" asp-for="Stock"/>
    <br />
      <label>Fiyat</label>
    <input type="text"  class="form-control" asp-for="Price"/>
    <br />
      <label>Açıklama </label>
    <input type="text"  class="form-control" asp-for="Description"/>
    <br />
    <button class="btn btn-outline-info">Ekle</button>

</form>
</div>